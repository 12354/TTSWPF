        mc:Ignorable="d"
        Title="MainWindow" Height="209.065" Width="800">
    <Grid>
        <TextBox x:Name="playBox" HorizontalAlignment="Left" Height="89" Margin="10,10,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="663" TextChanged="PlayBox_TextChanged" PreviewKeyDown="PlayBox_PreviewKeyDown"/>
        <Label Content="STRG+B = Play" HorizontalAlignment="Left" Margin="678,44,0,0" VerticalAlignment="Top"/>
